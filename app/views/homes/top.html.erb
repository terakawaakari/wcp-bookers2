<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6 pt-3">
      <h1>welcome to <strong><i class="fas fa-book"></i>Bookers</strong>!!</h1>
      <p>In <strong><i class="fas fa-book"></i>Bookers</strong>,</p>
      <p>you can share and exchange your opinions,inpressions,and emotions</p>
      <p>about various books!</p>
      <div class="btn-wrapper col-10 mx-auto">
        <% if user_signed_in? %>
          <div class="row">
            <%= link_to "Log in",user_path(current_user), class:"btn btn-primary btn-sm btn-block" %>
          </div>
          <div class="row">
            <%= link_to "Sign up",user_path(current_user), class:"btn btn-success btn-sm btn-block my-3" %>
          </div>
          <div class="row">
            <%= link_to "Guest log in",user_path(current_user), class:"btn btn-info btn-sm btn-block" %>
          </div>
        <% else %>
          <div class="row">
            <%= link_to "Log in",new_user_session_path, class:"btn btn-primary btn-sm btn-block" %>
          </div>
          <div class="row">
            <%= link_to "Sign up",new_user_registration_path, class:"btn btn-success btn-sm btn-block my-3" %>
          </div>
          <div class="row">
            <%= link_to "Guest log in",users_guest_sign_in_path, method: :post, class:"btn btn-info btn-sm btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
